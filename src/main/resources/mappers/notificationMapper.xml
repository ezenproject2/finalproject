<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.books.repository.NotificationMapper">

    <!-- 회원 번호(mno)로 알림 목록 조회 -->
    <select id="findNotificationsByMno" resultType="com.ezen.books.domain.Notification">
        SELECT * FROM notification WHERE mno = #{mno} ORDER BY reg_at DESC
    </select>

</mapper>
