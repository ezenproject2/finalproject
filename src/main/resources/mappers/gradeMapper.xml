<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.books.repository.GradeMapper">
    
    <select id="getPointRateByGrade" resultType="int">
        select pointRate from grade
        where gno = #{gno}
    </select>
    
    <select id="getCouponsByGradeAndPrice" resultType="com.ezen.books.domain.CouponVO">
        select * from coupon
        where gno = #{gno} and minPrice <= #{totalPrice}
    </select>
    
</mapper>